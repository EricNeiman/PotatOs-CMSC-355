<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tbdImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.potatos.ClassQuizzes">

    <Button
        android:id="@+id/BcreateQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:onClick="onCreateQuizclick"
        android:text="Create a quiz" />


    <Button
        android:id="@+id/BLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onLogOutClick"
        android:text="Log Out" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp">

        <EditText
            android:id="@+id/TVquizname"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/emptyString" />

        <Button
            android:id="@+id/bGrades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSeeGradesClick"
            android:text="See Grades" />

        <Button
            android:id="@+id/bGotoQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onGotoQuizClick"
            android:text="go to quiz" />
    </LinearLayout>


</LinearLayout>
