<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tbdImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.potatos.ClassQuizzes">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/background" />

    <Button
        android:id="@+id/BcreateQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCreateQuizclick"
        android:text="Create a quiz" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/TVquizname"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/emptyString" />

        <Button
            android:id="@+id/bGotoQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onGotoQuizClick"
            android:text="go to quiz" />
    </LinearLayout>


</LinearLayout>
