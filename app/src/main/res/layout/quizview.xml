<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="380dp"
        android:layout_height="75dp"
        app:layout_constraintEnd_toStartOf="@+id/TVquizpassword"
        app:layout_constraintStart_toStartOf="@+id/TVquizpassword">

        <EditText
            android:id="@+id/TVquizname"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="71dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="9dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/emptyString"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/TVquizpassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVquizpassword"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="9dp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/TVquizname"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bGrades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onSeeGradesClick"
            android:text="See Class Grades" />

        <Button
            android:id="@+id/bGotoQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onGotoQuizClick"
            android:text="go to quiz" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="380dp"
        android:layout_height="50dp">

        <Button
            android:id="@+id/bGotoMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="123dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:onClick="onGotoMainClick"
            android:text="go to main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
